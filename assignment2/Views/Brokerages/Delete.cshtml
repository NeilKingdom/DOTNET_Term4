@model Assignment2.Models.Brokerage
@{
    ViewData["Title"] = "Delete";
}

<div class="page-heading">
    <h1>Delete</h1>
    <h4>Brokerage</h4>
    <h3>Are you sure you want to delete this?</h3>
</div>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fee)
        </dd>
    </dl>

    <!-- Users should not be allowed to delete the brokerage if it contains advertisements -->
    @if (Model.Advertisements != null && Model.Advertisements.Count() > 0)
    {
        <p>You cannot delete a brokerage until all associated advertisements are deleted</p>
        <a asp-controller="Brokerages" asp-action="Index">Back to List</a>
    }
    else
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="BrokerageId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-controller="Brokerages" asp-action="Index">Back to List</a>
        </form>
    }
</div>
